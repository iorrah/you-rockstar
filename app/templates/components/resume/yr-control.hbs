<div class="control">
  <div class="d-flex justify-content-between">
    <div class="align-self-center">
      <label for="state-switcher" class="{{if state.template 'active'}}">
        Template
      </label>

      {{input type='checkbox' id='state-switcher' class='js-switch' checked=state.is_checked}}

      <label for="state-switcher" class="{{if state.theming 'active'}}">
        Theming
      </label>
    </div>

    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
      <div class="btn-group mr-2" role="group" aria-label="First group">
        <button type="button"
                id="state-prev"
                class="btn btn-{{if state.template 'success' 'info'}}"
                {{action 'prev'}}>
          <i class="fa fa-angle-left"></i>
        </button>

        <button type="button"
                id="state-next"
                class="btn btn-{{if state.template 'success' 'info'}}"
                {{action 'next'}}>
          <i class="fa fa-angle-right"></i>
        </button>
      </div>
    </div>
  </div>
</div>
