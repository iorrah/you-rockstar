<ul class="sidebar-nav">
  <li class="sidebar-brand">
    <a>Palettes</a>
  </li>
</ul>

<div class="palettes">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

      {{#each palettes as |palette index|}}
        <div class="carousel-item {{if (eql index 0) 'active'}}">
          <div class="option"  {{action 'select' palette}}>
            <div class="square palette-{{palette.id}}">
              {{#each palette.colors as |color|}}
                <div class="rec {{if color.is_light 'light' 'dark'}}" style="background-color: {{color.hex}}; height: {{div 100 palette.colors.length}}%">
                  <p>{{color.hex}}</p>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
